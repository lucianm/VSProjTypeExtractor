# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

#
# All files:
#
[*]
# Don't use tabs for indentation.
indent_style = space
indent_size = 4
# DOS EOL
end_of_line  = crlf
# more consistency
insert_final_newline = true
trim_trailing_whitespace = true

#
# .git database folder:
#
[.git/**]
# Unix EOL for .git files
end_of_line  = lf

# Set default charset
[*.{c,cpp,h,hpp,cu,cs,js,py,xml,wxs,ps1}]
charset = utf-8

